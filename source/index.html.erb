title: "Wish.Land :: 最棒的活動平台"
---

<!-- main_function -->
<div class="qrow">
  <div class="main_function">
<!-- search form -->

<!-- end of search form -->

<!-- nav -->

<!-- end of nav -->
  </div>
</div>

<!-- map -->
<div class="qrow">
<!-- map -->
  <div class="main_map">
    <div id="map">
    </div>
    <div class="map_overlay">
      <div class="detail">

        <!-- event pics -->
        <div class="qrow">
          <div id="event-pics" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <li data-target="#event-pics" data-slide-to="0" class="active"></li>
              <li data-target="#event-pics" data-slide-to="1"></li>
              <li data-target="#event-pics" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
              <div class="item active">
                <img src="<%= lorem.image('720x380', :text => 'event pics1', :random_color => true) %>" alt="...">
                <div class="carousel-caption">
                  <p><%= lorem.words 3 %></p>
                </div>
              </div>
              <div class="item">
                <img src="<%= lorem.image('720x380', :text => 'event pics2', :random_color => true) %>" alt="...">
                <div class="carousel-caption">
                  <p><%= lorem.words 3 %></p>
                </div>
              </div>
              <div class="item">
                <img src="<%= lorem.image('720x380', :text => 'event pics3', :random_color => true) %>" alt="...">
                <div class="carousel-caption">
                  <p><%= lorem.words 3 %></p>
                </div>
              </div>
            </div>
          </div>
        </div><!-- end of event pics -->

        <!-- tabs -->
        <div class="qrow">
          <!-- tab -->
          <div class="tab active">
            <p>活動資訊</p>
          </div>
          <!-- tab -->
          <div class="tab">
            <p>Wish List</p>
          </div>
          <!-- tab -->
          <div class="tab">
            <p>相關活動</p>
          </div>
        </div><!-- end of tabs -->

      </div>
    </div>
  </div><!-- end of map -->
</div>

<!-- event -->
<div class="qrow">
<!-- events -->
  <div class="events">
    <div class="wraper">
      <div class="header">
        <h3><i class="fa fa-star fa-lg"></i> 精選活動</h3>
      </div>

      <!-- event unit -->
      <% 15.times do |e| %>

      <div class="event">
        <img src="<%= lorem.image('600x800', :text => 'event unit') %>" alt="" class="img-responsive">
      </div>

      <% end %><!-- end of event unit -->
    </div>
  </div><!-- end of events -->
</div>



